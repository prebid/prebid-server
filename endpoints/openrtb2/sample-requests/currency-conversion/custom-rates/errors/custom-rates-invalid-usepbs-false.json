    "site": {
      "page": "test.somepage.com"
    },
    "imp": [
      {
        "id": "my-imp-id",
        "video": {
          "mimes": [
            "video/mp4"
          ]
        },
        "ext": {
          "appnexus": {
            "placementId": 12883451
          }
        }
      }
    ],
    "cur": ["MXN"],
    "ext": {
      "prebid": {
